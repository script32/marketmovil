{{> partials/menu}}
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
	<div class="col-12">
		<div class="page-header">
			<div class="float-right">
				<button type="submit" id="btnStoreAdd" class="btn btn-outline-success">{{ @root.__ "Create" }}</button>
			</div>
			<h2>{{ @root.__ "New Store" }}</h2>
		</div>
		<form id="storeNewForm" data-toggle="validator" autocomplete="off">
			<div class="form-group">
				<label>{{ @root.__ "Store Title" }} *</label>
				<input type="text" class="form-control" id="storeTitle" value="{{store.storeTitle}}" required>
			</div>
			<div class="form-group">
				<label>{{ @root.__ "Store Address" }} *</label>
				<input type="text" class="form-control" id="storeAddress" value="{{store.storeAddress}}" required>
			</div>
			<div class="form-group">
				<label>{{ @root.__ "Store Description" }} *</label>
				<input type="text" class="form-control" id="storeDescription" value="{{store.storeDescription}}" required>
			</div>
		</form>
	</div>
</main>