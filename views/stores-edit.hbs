{{> partials/menu}}
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
	<div class="col-md-12">
		<div class="page-header">
			<div class="float-right">
				<button type="submit" id="btnStoreEdit" class="btn btn-outline-success">{{ @root.__ "Update" }}</button>
			</div>
			<h2>{{ @root.__ "Store edit" }}</h2>
		</div>
		<form id="storeEditForm" data-toggle="validator">
			<input type="hidden" id="storeId" value="{{store._id}}" />
			<div class="form-group">
				<label>{{ @root.__ "Store Title" }} *</label>
				<input type="text" class="form-control" id="storeTitle" value="{{store.storeTitle}}" required>
			</div>
			<div class="form-group">
				<label>{{ @root.__ "Store Address" }} *</label>
				<input type="text" class="form-control" id="storeAddress" value="{{store.storeAddress}}" required>
			</div>
			<div class="form-group">
				<label>{{ @root.__ "Store Description" }} *</label>
				<input type="text" class="form-control" id="storeDescription" value="{{store.storeDescription}}" required>
			</div>
			
			<div class="form-group">
				<label>API Key</label>
				<div class="input-group">
					<input type="text" class="form-control" id="apiKey" value="{{user.apiKey}}" aria-label="..." readonly>
					<div class="input-group-append">
						<button id="btnGenerateAPIkey" class="btn btn-outline-success">{{ @root.__ "Generate" }}</button>
					</div>
				</div>
			</div>
		</form>
	</div>
</main>